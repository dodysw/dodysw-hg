  "icons": {"16":   "detik_langsung_16.png",
            "48":   "detik_langsung_48.png",
            "128":  "detik_langsung_128.png"},
  "permissions": [
    "tabs",
    "http://*.detik.com/*",
    "http://*.detikinet.com/*",
    "http://*.detikfinance.com/*",
    "http://*.detiksport.com/*",
    "http://*.detikhealth.com/*",
    "http://*.detikfood.com/*",
    "http://*.detikhot.com/*",
    "http://*.detiknews.com/*",
    "http://*.wolipop.com/*"
  ]
}