  "background_page": "index.html",
  "content_scripts": [
    {
        "matches": ["http://us.detik.com/", "http://www.detik.com/", "http://us.detik.com/?*", "http://www.detik.com/?*"],
        "js": ["detik-page-detect.js"]
    }
